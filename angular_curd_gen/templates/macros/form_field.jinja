{% macro gen_form_field(field_name, label_name, field_py_type,cls, placeholder) -%}
    {% set field_js_type = cls.map_ts_type(field_py_type) -%}
    <nz-form-item>
        <nz-form-control>
            <nz-form-label>{{ label_name }}</nz-form-label>
            {% if field_js_type=='string' -%}
                <nz-input-group>
                    <input nz-input placeholder="{{ placeholder }}" formControlName="{{ field_name }}"/>
                </nz-input-group>
            {% elif field_js_type=='boolean' -%}
                <label nz-checkbox formControlName="{{ field_name }}">{{ label_name }}</label>
            {% elif field_js_type=='Date' -%}
                <nz-date-picker formControlName="{{ field_name }}"></nz-date-picker>
            {% elif field_js_type=='number' -%}
                <input nz-input type="number" placeholder="{{ placeholder }}" formControlName="{{ field_name }}"/>
            {% else %}
                尚未支持 {{ field_js_type }}
            {% endif -%}
        </nz-form-control>
    </nz-form-item>
{% endmacro %}